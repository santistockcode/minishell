{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current Test Binary",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tests/cmds_tests/test_set_here_doc",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // "preLaunchTask": "compile-test",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Debug Test (Input Binary Name)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tests/cmds_tests/${input:testBinaryName}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb"
        }
    ],
    "inputs": [
        {
            "id": "testBinaryName",
            "type": "promptString",
            "description": "Test binary name",
            "default": "test_exec_cmds"
        }
    ]
}